<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="CashApp" content="true" />
    <meta name="MobileOptimized" content="CashApp" />
    <meta name="description" content="Système de gestion des boutiques de ventes en gros et détails" />
    <meta name="author" content="Delrodie AMOIKON" />
    <meta name="keywords" content="Logiciel, superette, stock, caisse" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{% block title %}CashApp :: {% endblock %}</title>
    <link rel="icon" href="{{ absolute_url(asset('frontend/img/logo-cvav.png')) }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/vendor/css/style.min.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/app.css')) }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/themify-icons/themify-icons.css') }}">
    {% endblock %}
    <style>
        .head-icon{
            font-size: 5.5rem;
        }
        .action{
            float: right;
        }
        .logo-img{
            font-weight: bold;
            font-size: 2rem;
        }
    </style>
</head>
<body>

<div class="page-wrapper" id="main-wrapper" data-theme="blue_theme"  data-layout="vertical" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
    <aside class="left-sidebar">
        <div>
            <div class="brand-logo d-flex align-items-center justify-content-between">
                <a href="{{ absolute_url(path('app_home')) }}" class="text-nowrap logo-img">
                    <img src="{{ absolute_url(asset('frontend/img/logo-cvav.png')) }}" class="dark-logo" width="150" alt="" />
                </a>
                <div class="close-btn d-lg-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                    <i class="ti ti-x fs-8"></i>
                </div>
            </div>
            <nav class="sidebar-nav scroll-sidebar" data-simplebar>
                <ul id="sidebarnav">
                    <li class="nav-small-cap">
                        <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                        <span class="hide-menu">Tableau de bord</span>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="{{ absolute_url(path('app_home')) }}" aria-expanded="false">
                              <span>
                                <i class="ti-dashboard"></i>
                              </span>
                            <span class="hide-menu">General</span>
                        </a>
                    </li>

                    <!-- GESTION -->
                    <li class="nav-small-cap">
                        <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                        <span class="hide-menu">MODULES</span>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link has-arrow" href="#" aria-expanded="false">
                              <span class="d-flex">
                                <i class="ti-desktop"></i>
                              </span>
                            <span class="hide-menu">Activités</span>
                        </a>
                        <ul aria-expanded="false" class="collapse first-level">
                            <li class="sidebar-item">
                                <a href="{{ absolute_url(path('app_backend_aspirant_index')) }}" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Participants</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Activités</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link has-arrow" href="#" aria-expanded="false">
                              <span class="d-flex">
                                <i class="ti-settings"></i>
                              </span>
                            <span class="hide-menu">Gestion</span>
                        </a>
                        <ul aria-expanded="false" class="collapse first-level">
                            <li class="sidebar-item">
                                <a href="{{ absolute_url(path('app_backend_vicariat_index')) }}" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Vicariats</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="{{ absolute_url(path('app_backend_doyenne_index')) }}" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Doyennes</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="{{ absolute_url(path('app_backend_section_index')) }}" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Section de base</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="{{ absolute_url(path('app_backend_grade_index')) }}" class="sidebar-link">
                                    <div class="round-16 d-flex align-items-center justify-content-center">
                                        <i class="ti-angle-right"></i>
                                    </div>
                                    <span class="hide-menu">Grade</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- PARAMETRES -->

                    <li class="nav-small-cap">
                        <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                        <span class="hide-menu">PARAMETRES</span>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="#" aria-expanded="false">
                              <span>
                                <i class="ti-user"></i>
                              </span>
                            <span class="hide-menu">Utilisateurs</span>
                        </a>
                    </li>

                </ul>
            </nav>
            <div class="fixed-profile p-3 bg-light-secondary rounded sidebar-ad mt-3">
                <div class="hstack gap-3">
                    <div class="john-img">
                        <img src="https://demos.adminmart.com/premium/bootstrap/modernize-bootstrap/package/dist/images/profile/user-1.jpg" class="rounded-circle" width="40" height="40" alt="">
                    </div>
                    <div class="john-title">
                        <h6 class="mb-0 fs-4 fw-semibold">User</h6>
                        <span class="fs-2 text-dark">Designer</span>
                    </div>
                    <button class="border-0 bg-transparent text-primary ms-auto" tabindex="0" type="button" aria-label="logout" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="logout">
                        <i class="ti ti-power fs-6"></i>
                    </button>
                </div>
            </div>
            <!-- End Sidebar navigation -->
        </div>
        <!-- End Sidebar scroll-->
    </aside>
    <div class="body-wrapper">
        <header class="app-header">
            <nav class="navbar navbar-expand-lg navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link sidebartoggler nav-icon-hover ms-n3" id="headerCollapse" href="javascript:void(0)">
                            <i class="ti-menu"></i>
                        </a>
                    </li>
                </ul>
                <div class="d-block d-lg-none">
                    <img src="{{ absolute_url(asset('frontend/img/logo-cvav.png')) }}" class="dark-logo" width="250" alt="" />
                </div>
                <button class="navbar-toggler p-0 border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="p-2">
                <i class="ti-dots fs-7"></i>
              </span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="javascript:void(0)" class="nav-link d-flex d-lg-none align-items-center justify-content-center" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobilenavbar" aria-controls="offcanvasWithBothOptions">
                            <i class="ti-align-justified fs-7"></i>
                        </a>
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-center">
                            <li class="nav-item dropdown">
                                <a class="nav-link pe-0" href="javascript:void(0)" id="drop1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="d-flex align-items-center">
                                        <div class="user-profile-img">
                                            <img src="{{ asset('assets/vendor/img/avatar.png') }}" class="rounded-circle" width="35" height="35" alt="" />
                                        </div>
                                    </div>
                                </a>
                                <div class="dropdown-menu content-dd dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop1">
                                    <div class="profile-dropdown position-relative" data-simplebar>
                                        <div class="py-3 px-7 pb-0">
                                            <h5 class="mb-0 fs-5 fw-semibold">User Profile</h5>
                                        </div>
                                        <div class="d-flex align-items-center py-9 mx-7 border-bottom">
                                            <img src="{{ asset('assets/vendor/img/avatar.png') }}" class="rounded-circle" width="80" height="80" alt="" />
                                            <div class="ms-3">
                                                <h5 class="mb-1 fs-3">Mathew Anderson</h5>
                                            </div>
                                        </div>
                                        <div class="message-body">
                                            <a href="#" class="py-8 px-7 d-flex align-items-center">
                            <span class="d-flex align-items-center justify-content-center bg-light rounded-1 p-6">
                              <img src="https://demos.adminmart.com/premium/bootstrap/modernize-bootstrap/package/dist/images/svgs/icon-inbox.svg" alt="" width="24" height="24">
                            </span>
                                                <div class="w-75 d-inline-block v-middle ps-3">
                                                    <h6 class="mb-1 bg-hover-primary fw-semibold">Mes opérations</h6>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="d-grid py-4 px-7 pt-8">
                                            <a href="#" class="btn btn-outline-primary">Deconnexion</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </div>
</div>


{% block javascripts %}
    <script src="{{ absolute_url(asset('assets/vendor/js/jquery.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/simplebar.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/bootstrap.bundle.min.js')) }}"></script>
    <!--  core files -->
    <script src="{{ absolute_url(asset('assets/vendor/js/app.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/app.init.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/app-style-switcher.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/sidebarmenu.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/custom.js')) }}"></script>
    <!--  current page js files -->
    <script src="{{ absolute_url(asset('assets/vendor/js/owl.carousel.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/apexcharts.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/vendor/js/dashboard.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/js/script.js')) }}"></script>
{% endblock %}
</body>
</html>
